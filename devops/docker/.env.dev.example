# =============================================================================
# Sibyl MCP Server - Development Environment
# =============================================================================

# Build Configuration
BUILD_TARGET=development
VERSION=0.1.0-dev
BUILD_DATE=
VCS_REF=dev

# Server Configuration
SIBYL_SERVER_MODE=http
SIBYL_LOG_LEVEL=DEBUG
SIBYL_LOG_FILE=/var/log/sibyl/sibyl.log
SIBYL_ENABLE_METRICS=true
SIBYL_METRICS_PORT=9090

# HTTP Server
SIBYL_ENABLE_HTTP_SERVER=true
MCP_HTTP_HOST=0.0.0.0
MCP_HTTP_PORT=8770
SIBYL_HOST=0.0.0.0
SIBYL_PORT=8000

# External port mappings
SIBYL_MCP_HTTP_PORT=8770
SIBYL_REST_PORT=8000

# Workspace Configuration
SIBYL_WORKSPACE_FILE=/app/config/workspaces/example_local.yaml
WORKSPACE_PATH=../../../

# DuckDB Configuration
DUCKDB_MEMORY_LIMIT=2GB
MCP_DUCKDB_PATH=/var/lib/sibyl/state/sibyl_state.duckdb

# API Keys (load from environment or secrets file)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
SECRETS_FILE=./.secrets/api_keys.txt

# Resource Limits (dev uses less resources)
SIBYL_CPU_LIMIT=2.0
SIBYL_CPU_REQUEST=0.5
SIBYL_MEMORY_LIMIT=4G
SIBYL_MEMORY_REQUEST=1G

# Observability (optional in dev)
PROMETHEUS_PORT=9091
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_ROOT_URL=http://localhost:3001
GRAFANA_PLUGINS=grafana-piechart-panel,grafana-polystat-panel
LOKI_PORT=3101
JAEGER_UI_PORT=16687
JAEGER_COLLECTOR_PORT=14269
JAEGER_OTLP_GRPC_PORT=4318
JAEGER_OTLP_HTTP_PORT=4319

# Environment Metadata
ENVIRONMENT=development
HOSTNAME=sibyl-dev
